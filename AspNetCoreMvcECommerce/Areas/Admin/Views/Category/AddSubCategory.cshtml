
@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model AspNetCoreMvcECommerce.Models.Category


<section class="content-header">
    <h1>
        Yeni Alt Kategori Ekle

    </h1>

</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Alt Kategori Bilgileri</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="category" asp-action="addsubcategory" asp-route-id="@Model.ParentId">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Kategori Adı</label>
                            <input class="form-control" asp-for="Name" type="text" required="required">
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status"> Status
                            </label>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <input type="hidden" asp-for="ParentId" />
                    </div>
                </form>
            </div>



        </div>
    </div>

</section>


