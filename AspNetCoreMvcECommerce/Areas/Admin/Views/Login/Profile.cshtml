
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model AspNetCoreMvcECommerce.Models.Account



<section class="content-header">
    <h1>Profili Güncelle</h1>
</section>

<section>
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Hesap Bilgileri</h3>
                </div>
                <span class="text-green">@ViewBag.msg</span>
                <form asp-area="admin" asp-controller="login" asp-action="profile" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="username">Kullanıcı Adı</label>
                            <input class="form-control" id="username" type="text" required="required" asp-for="Username" />
                        </div>

                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <input class="form-control" id="password" type="password" required="required" asp-for="Password" />
                        </div>

                        <div class="form-group">
                            <label for="adsoyad">Ad Soyad</label>
                            <input class="form-control" id="adsoyad" type="password" required="required" asp-for="FullName" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" id="email" type="password" required="required" asp-for="Email"/>
                        </div>

                        
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
