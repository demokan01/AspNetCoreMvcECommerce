
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model AspNetCoreMvcECommerce.Models.Photo



<section class="content-header">
    <h1>
        Resimleri Düzenle @ViewBag.Product

    </h1>

</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Resim Bilgileri</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="photo" asp-action="edit" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputFile">Photo</label>
                            <input id="exampleInputFile" type="file" name="fileUpload" accept="image/*">
                            <br />
                            <img src="~/products/@Model.Name" width="120" />
                        </div>



                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status"> Status
                            </label>
                        </div>
                        
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>



        </div>
    </div>

</section>



