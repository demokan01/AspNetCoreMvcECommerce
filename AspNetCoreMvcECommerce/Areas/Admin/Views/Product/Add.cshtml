
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model AspNetCoreMvcECommerce.Areas.Admin.Models.ViewModels.ProductViewModel




<section class="content-header">
    <h1>
        Yeni Ürün Ekle

    </h1>

</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Ürün Bilgileri</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="product" asp-action="add" enctype="multipart/form-data">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="name">Ürün Adı</label>
                            <input class="form-control" asp-for="Product.Name" type="text" required="required">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="3" asp-for="Product.Description"></textarea>
                        </div>

                        <div class="form-group">
                            <label>Ürün Detayı</label>
                            <textarea class="form-control" rows="3" asp-for="Product.Details"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="name">Fiyat</label>
                            <input class="form-control" asp-for="Product.Price" type="number" min="0"  required="required">
                        </div>
                        <div class="form-group">
                            <label for="name">Stok</label>
                            <input class="form-control" asp-for="Product.Quantity" type="number" min="0" required="required">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputFile">Photo</label>
                            <input id="exampleInputFile" type="file" name="photo" accept="image/*">
                        </div>



                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Product.Status"> Status
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Product.Featured"> Popülerlik
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Ürün Kategorisi</label>
                            <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-control">
                            </select>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>



        </div>
    </div>

</section>



