
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model AspNetCoreMvcECommerce.Models.SlideShow




<section class="content-header">
    <h1>
        Slide Düzenle

    </h1>

</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Slide Bilgileri</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="slideshow" asp-action="edit" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputFile">Photo</label>
                            <input id="exampleInputFile" type="file" name="photo" accept="image/*">
                            <br />
                            <img src="~/slideshows/@Model.Name" width="120" />
                        </div>
                        <div class="form-group">
                            <label for="name">Başlık</label>
                            <input class="form-control" asp-for="Title" type="text">
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status"> Status
                            </label>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <input type="hidden" asp-for="Id"/>
                    </div>
                </form>
            </div>



        </div>
    </div>

</section>

