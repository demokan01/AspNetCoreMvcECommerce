
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Slide Show Listesi
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Slide Show Bilgileri</h3>
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Slide Adı</th>
                                <th>Status</th>
                                <th>Eylem</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Slide Adı</th>
                                <th>Status</th>
                                <th>Eylem</th>

                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var slideshow in ViewBag.SlideShows)
                            {
                                <tr class="odd">
                                    <td class="  sorting_1">@slideshow.Id</td>
                                    <td class=" "><img src="~/slideshows/@slideshow.Name" width="120" /></td>
                                    <td class=" ">@(slideshow.Status ? "Göster":"Gizle")</td>

                                    <td class=" ">
                                        <a asp-area="admin" asp-controller="slideshow" asp-action="edit" asp-route-id="@slideshow.Id">
                                            Düzenle
                                        </a> |

                                        <a asp-area="admin" asp-controller="slideshow" asp-action="delete" asp-route-id="@slideshow.Id" onclick="return confirm('Emin misiniz ?')">Sil</a>


                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

